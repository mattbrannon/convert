{
  "compilerOptions": {
    "target": "es2016",
    "lib": ["ES2022"],
    "module": "ES2022",
    "rootDir": "./src",
    "baseUrl": "./src",
    "declaration": true,
    "declarationDir": "./dist/types",
    "outDir": "./compiled",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "Node"
  }
}
